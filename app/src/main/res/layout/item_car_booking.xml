<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="@dimen/_160sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/carNameTV"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/alto_vx"
            android:layout_marginStart="@dimen/_10sdp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toTopOf="@+id/carDetailsTV"
            app:layout_constraintEnd_toStartOf="@+id/amountTV"
            app:layout_constraintStart_toEndOf="@+id/carIV"
            app:layout_constraintTop_toTopOf="@+id/carIV" />

        <TextView
            android:id="@+id/pickDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/date_time_placeholder"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="@+id/carDetailsTV2"
            app:layout_constraintTop_toTopOf="@+id/guideline11" />

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="@dimen/_10ssp"
            android:autoSizeMinTextSize="@dimen/_5ssp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/noto_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/daniyal_abid"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="@+id/carDetailsTV4"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            app:layout_constraintWidth_percent="0.25" />

        <TextView
            android:id="@+id/emailTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="@dimen/_10ssp"
            android:autoSizeMinTextSize="@dimen/_5ssp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/noto_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="m.waseemmirzaa@gmail.com"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="@+id/carDetailsTV4"
            app:layout_constraintTop_toTopOf="@+id/guideline10"
            app:layout_constraintWidth_percent="0.45" />

        <TextView
            android:id="@+id/userPhoneTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/noto_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="0300 000000"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline6" />

        <TextView
            android:id="@+id/dropDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/noto_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/date_time_placeholder"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/pickDateTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline11" />

        <TextView
            android:id="@+id/amountTV"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/noto_bold"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/price"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/carNameTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/carNameTV" />

        <TextView
            android:id="@+id/carDetailsTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/noto_regular"
            android:maxLines="1"
            android:text="@string/rit_5875_honda_civic"
            android:textColor="@color/textGray"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/carNameTV"
            app:layout_constraintTop_toTopOf="@+id/guideline4" />

        <TextView
            android:id="@+id/carDetailsTV2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_regular"
            android:maxLines="1"
            android:text="@string/start_date_amp_time"
            android:textColor="@color/textGray"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailTV" />

        <TextView
            android:id="@+id/carDetailsTV4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/noto_regular"
            android:maxLines="1"
            android:text="@string/name_title"
            android:textColor="@color/textGray"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintStart_toStartOf="@+id/carDetailsTV"
            app:layout_constraintTop_toTopOf="@+id/guideline7" />

        <TextView
            android:id="@+id/carDetailsTV7"
            android:layout_width="33dp"
            android:layout_height="35dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_regular"
            android:maxLines="1"
            android:text="@string/email"
            android:textColor="@color/textGray"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintStart_toStartOf="@+id/carDetailsTV"
            app:layout_constraintTop_toTopOf="@+id/guideline9" />

        <TextView
            android:id="@+id/carDetailsTV6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/noto_regular"
            android:maxLines="1"
            android:text="@string/phone"
            android:textColor="@color/textGray"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintStart_toStartOf="@+id/userPhoneTV"
            app:layout_constraintTop_toTopOf="@+id/guideline7" />

        <TextView
            android:id="@+id/carDetailsTV3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_regular"
            android:maxLines="1"
            android:text="@string/start_date_amp_time"
            android:textColor="@color/textGray"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dropDateTime"
            app:layout_constraintTop_toBottomOf="@+id/emailTV" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.14" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.44" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.54" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.81" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/carIV"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/car_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siShape="@drawable/drawable_top_left_curved"
            app:siSquare="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>